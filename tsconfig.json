{
  "compilerOptions": {
    "rootDir": "./Source",
    "baseUrl": "./Source",
    "paths": {
      "@dolittle/typescript.build": ["Source/index.ts"]
    },
    "sourceRoot": "./Source",
    "outDir": "./Distribution",
    "declarationDir": "./Distribution",
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es2015",
    "esModuleInterop": true,
    "stripInternal": true,
    
    "declaration": true,

    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,

    "experimentalDecorators": true
  },
  "include": ["Source/**/*.ts"]
}