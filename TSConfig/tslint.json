{
    "extends": "tslint:recommended",
    "rules": {
        "adjacent-overload-signatures": true,
        "ban-comma-operator": true,
        "no-async-without-await": true,
        "no-console": false,
        "no-duplicate-switch-case": true,
        "no-empty-interface": true,
        "no-for-in": true,
        "no-invalid-template-strings": true,
        "no-invalid-this": true,
        "no-magic-numbers": [true, {"ignore-jsx": true}],
        "no-null-keyword": true,
        "no-object-literal-type-assertion": [true, {"allow-arguments": true}],
        "no-promise-as-boolean": true,
        "no-return-await": true,
        "no-sparse-arrays": true,
        "no-switch-case-fall-through": true,
        "no-unbound-method": [true, "ignore-static"],
        "no-unnecessary-class": ["allow-static-only", "allow-constructor-only"],
        "no-unused-expression": [true, "allow-fast-null-checks"],
        "prefer-object-spread": true,
        "static-this": true,
        "strict-boolean-expressions": true,
        "switch-default": true,
        "triple-equals": true,
        "cyclomatic-complexity": [true, 5],
        "deprecation": true,
        "max-classes-per-file": [true, 1],
        "no-duplicate-imports": [true, {"allow-namespace-imports": true}],
        "prefer-readonly": true,


        "array-type": [true, "array-simple"],
        "arrow-return-shorthand": true,
        "completed-docs": true,
        "file-name-casing": [true, "pascal-case"],
        "increment-decrement": true,
        "interface-name": [true, "always-prefix"],
        "no-angle-bracket-type-assertion": true,
        "object-literal-key-quotes": [true, "as-needed"],
        "prefer-method-signature": true,
        "prefer-template": true,
        "prefer-while": true,
        "space-before-function-paren": [true, {"anonymous": "always", "named": "never", "asyncArrow": "always"}],
        "space-within-parens": false,

        "align": [true, "parameters", "arguments", "statements"],
        "eofline": true,
        "import-spacing": true,
        "indent": [true, "spaces", 4],
        "jsdoc-format": [true, "check-multiline-start"],
        "newline-before-return": true,
        "new-parens": true,
        "no-consecutive-blank-lines": true,
        "no-irregular-whitespace": true,
        "no-trailing-whitespace": [true, "ignore-comments", "ignore-blank-lines", "ignore-template-strings"],
        "number-literal-format": true,
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "semicolon": [true, "always", "ignore-interfaces"],
        "typedef-whitespace": [
            true,
            {
              "call-signature": "nospace",
              "index-signature": "nospace",
              "parameter": "nospace",
              "property-declaration": "nospace",
              "variable-declaration": "nospace"
            },
            {
              "call-signature": "onespace",
              "index-signature": "onespace",
              "parameter": "onespace",
              "property-declaration": "onespace",
              "variable-declaration": "onespace"
            }
          ],
        "whitespace": [
            true, 
            "check-branch", 
            "check-decl", 
            "check-module", 
            "check-operator", 
            "check-typecast"
        ]
    }
}
